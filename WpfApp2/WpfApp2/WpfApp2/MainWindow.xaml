<Window x:Class="YourNamespace.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Имя пользователя:"/>
            <TextBox Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>

            <Label Content="Пароль:"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="0,0,0,20"/>

            <Button Content="Войти" Width="200" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
